<h1><%= @user.email %></h1>
<h2>User's upcoming events:</h2>
<ul>
  <% @user.events.upcoming.each do |event| %>
    <li><%= render "events/event_container", event: event %></li>
  <% end %>
</ul>
<h2>User's past events:</h2>
<ul>
  <% @user.events.past.each do |event| %>
    <li><%= render "events/event_container", event: event %></li>
  <% end %>
</ul>
